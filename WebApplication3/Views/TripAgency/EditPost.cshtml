@model WebApplication3.Models.Post

@{
    ViewBag.Title = "EditPost";
    Layout = "~/Views/Shared/A.cshtml";
}

<div style="margin-left:250px;margin-top:70px;">

    <h2 class="text-center ">Edite Post</h2>
    @using (Html.BeginForm("EditPost", "TripAgency", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.TripImage)
            @Html.HiddenFor(model => model.UserId)
            @Html.HiddenFor(model => model.PostDate)
            @Html.HiddenFor(model => model.Approved)
            @Html.HiddenFor(model => model.RankLike)
            @Html.HiddenFor(model => model.RankDislike)


            <div class="form-group">
                @Html.LabelFor(model => model.TripTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TripTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TripTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TripDestenation, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TripDestenation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TripDestenation, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TripDetails, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TripDetails, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TripDetails, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group ">
                @Html.LabelFor(m => m.TripImage, new { @class = "col-md-2 control-label" })
                <div class="col-md-8">

                    <input type="file" name="PostImage" />
                    <img src="~/upload/Post_images/@Model.TripImage" style="width:70px;height:70px;" />
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TripDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TripDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TripDate, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btnSubmit" />
                </div>
            </div>
        </div>
    }

</div>