
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/Traveller_Layout.cshtml";
}
@Html.Partial("_auth")
<div class="container" style="margin-top:50px;">
    <div class="row">
        @foreach (var item in ViewBag.p)
        {
            <div class="card col-md-6" style="margin-top:20px;margin">
                <img src="~/upload/Post_images/@item.TripImage" class="card-img-top" alt="..." width="350" height="250">
                <div class="card-body">
                    <h5 class="card-title">@item.User.FirstName @item.User.LastName</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@item.TripTitle</li>
                    <li class="list-group-item">
                        <p class="card-text">@item.TripDetails</p>
                    </li>
                    <li class="list-group-item">@item.PostDate</li>
                    <li class="list-group-item">@item.TripDate</li>
                    <li class="list-group-item">@item.TripDestenation</li>
                </ul>
            </div>
        }



    </div>

</div>
